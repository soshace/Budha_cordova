<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.topdigital.buddha" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="DatePickerPlugin">
        <param name="android-package" value="com.plugin.datepicker.DatePickerPlugin" />
    </feature>
    <feature name="AdMob">
        <param name="android-package" value="com.rjfun.cordova.plugin.AdMob" />
    </feature>
    <feature name="EmailComposer">
        <param name="android-package" value="de.appplant.cordova.emailcomposer.EmailComposer" />
    </feature>
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <splash density="land-hdpi" src="www/img/splash_16_9.png" />
    <splash density="land-ldpi" src="www/img/splash_16_9.png" />
    <splash density="land-mdpi" src="www/img/splash_4_3.png" />
    <splash density="land-xhdpi" src="www/img/splash_16_9.png" />
    <splash density="port-hdpi" src="www/img/splash_9_16.png" />
    <splash density="port-ldpi" src="www/img/splash_9_16.png" />
    <splash density="port-mdpi" src="www/img/splash_3_4.png" />
    <splash density="port-xhdpi" src="www/img/splash_9_16.png" />
    <name>Budha Calendar</name>
    <description>
        Calendar description
    </description>
    <author email="somemail@mail.com" href="http://cordova.io">
        AuthorName
    </author>
    <content src="index.html" />
    <icon src="www/img/icon.png" />
    <access origin="*" />
    <splash src="www/img/splash.png" />
    <plugin name="com.rjfun.cordova.plugin.admob" />
</widget>
