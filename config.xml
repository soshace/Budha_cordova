<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.topdigital.buddha" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Budha Calendar</name>
    <description>
        Calendar description
    </description>
    <author email="somemail@mail.com" href="http://cordova.io">
        AuthorName
    </author>
    <content src="index.html" />
    <icon src="www/img/icon.png" />
    <access origin="*" />
    <splash src="www/img/splash.png" />
