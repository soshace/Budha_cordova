        <splash src="www/img/splash_16_9.png" density="land-xhdpi"/>

        <splash src="www/img/splash_9_16.png" density="port-hdpi"/>
        <splash src="www/img/splash_9_16.png" density="port-ldpi"/>
        <splash src="www/img/splash_3_4.png" density="port-mdpi"/>
        <splash src="www/img/splash_9_16.png" density="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <splash src="www/img/splash_3_4.png" width="320" height="480"/>
        <splash src="www/img/splash_3_4.png" width="640" height="960"/>
